map.micello = customTheme:

  icons:
    # png fallback without svg support
    do ->
      if Modernizr.svg
        offset: ox: 15, oy: 15
        'ATM': '<%= asset_path "micello-map-icons/atm.svg" %>'
        'Bathroom': '<%= image_path "micello-map-icons/restroom.svg" %>'
        'Bathroom M': '<%= image_path "micello-map-icons/restroom.svg" %>'
        'Bathroom W': '<%= image_path "micello-map-icons/restroom.svg" %>'
        'Bus': '<%= image_path "micello-map-icons/bus.svg" %>'
        'Disabled Access': '<%= image_path "micello-map-icons/accessible.svg" %>'
        'Elevator': '<%= image_path "micello-map-icons/lifts.svg" %>'
        'Entrance': '<%= image_path "micello-map-icons/entrance_exit.svg" %>'
        'Escalator': '<%= image_path "micello-map-icons/escalator.svg" %>'
        'Information': '<%= image_path "micello-map-icons/concierge_desk.svg" %>'
        'Stairs': '<%= image_path "micello-map-icons/stairs.svg" %>'
        'Taxi': '<%= image_path "micello-map-icons/taxi.svg" %>'
        'Telephone': '<%= image_path "micello-map-icons/telephones.svg" %>'
      else
        offset: ox: 15, oy: 15
        'ATM': '<%= asset_path "micello-map-icons/png/atm.png" %>'
        'Bathroom': '<%= image_path "micello-map-icons/png/restroom.png" %>'
        'Bathroom M': '<%= image_path "micello-map-icons/png/restroom.png" %>'
        'Bathroom W': '<%= image_path "micello-map-icons/png/restroom.png" %>'
        'Bus': '<%= image_path "micello-map-icons/png/bus.png" %>'
        'Disabled Access': '<%= image_path "micello-map-icons/png/accessible.png" %>'
        'Elevator': '<%= image_path "micello-map-icons/png/lifts.png" %>'
        'Entrance': '<%= image_path "micello-map-icons/png/entrance_exit.png" %>'
        'Escalator': '<%= image_path "micello-map-icons/png/escalator.png" %>'
        'Information': '<%= image_path "micello-map-icons/png/concierge_desk.png" %>'
        'Stairs': '<%= image_path "micello-map-icons/png/stairs.png" %>'
        'Taxi': '<%= image_path "micello-map-icons/png/taxi.png" %>'
        'Telephone': '<%= image_path "micello-map-icons/png/telephones.png" %>'

  pin:
    src: '<%= image_path 'icon_map_pointer.png' %>'
    ox: 9
    oy: 30

  themeFamily: 'Standard'

  theme: s:
    'Selected':
      m: '#695648'
      o: '#695648'
      t: '#ffffff'
      w: 1
    'Unit':
      m: '#f7f2df'
      o: '#d8bca9'
      t: '#695648'
      w: 1
    'Background':
      m: '#ffffff'
      o: '#dbd9d7'
      w: 10
    'Inaccessible Space':
      m: '#dbd9d7'
    'Open Obstruction':
      m: '#f7f5f2'
    'Level Change':
      m: '#ffebc2'
      o: '#ffb870'
      w: 1
    'Room':
      m: '#ffebc2'
      o: '#ffb870'
      w: 1
    'Building':
      m: '#f7f2df'
      o: '#d8bca9'
      t: '#695648'
      w: 1
    'Water':
      m: '#e1f0ff'
    'Parking Lot':
      m: '#bfbebd'
    'Parking Structure':
      m: '#bfbebd'
    'Grass':
      w: 0
    'Traffic Marker':
      w: 0
    'Parking Spot':
      w: 0
    'Entrance':
      w: 0
    'Wall':
      o: '#d8bca9'
      w: 1
    'Section':
      m: '#f7f2df'
      o: '#d8bca9'
      t: '#695648'
      w: 1
    'Service':
      m: '#f7f2df'
      o: '#d8bca9'
      t: '#695648'
      w: 1
    'Ramp':
      m: '#dbd9d7'
