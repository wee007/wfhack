<%# Contact Us %>
<% if @centre.phone_number.present? or @centre.email_address.present? %>
  <section aria-labelledby="contact-us" class="mrg-dbl">

    <h2 id="contact-us">Contact Us</h2>

    <div class="grid grid--gutter-dbl">

      <%# Phone number %>
      <% if @centre.phone_number.present? %>
        <div class="grid__item non-palm-one-half">

          <%# Show centre number if at non-palm size %>
          <div class="box island txt-center hide-fully--palm">
            <span class="icon icon--phone2 icon--xlrg icon--spacing-lrg" aria-hidden="true"></span>
            <span class="hide-visually">Phone number</span>
            <span itemprop="telephone"><%= @centre.phone_number %></span>
          </div>
          <%# //Show centre number if at non-palm size %>

          <%# Show CTA button for centre contact number for palm %>
          <span class="hide-fully--non-palm">
            <%= phone_link @centre.phone_number, class: 'btn btn--full btn--main btn--main-dark btn--main-lrg ga-call-store' do |phone_number| %>
              <span class="icon icon--phone icon--lrger icon--spacing-lrg icon--flush-top" aria-hidden="true"></span>
              <strong>Call <%= @centre.short_name %> Centre</strong>
            <% end %>
          </span>
          <%# //Show CTA button for centre contact number for palm %>

        </div>
      <% end %>
      <%# //Phone number %>

      <%# Email address %>
      <% if @centre.email_address.present? %>
        <div class="grid__item non-palm-one-half">
          <div class="box island txt-center txt-truncate">
            <span class="icon icon--email icon--xlrg icon--spacing-lrg" aria-hidden="true"></span>
            <span class="hide-visually">Email</span>
            <%= mail_to @centre.email_address, @centre.email_address, itemprop: "email" %>
          </div>
        </div>
      <% end %>
      <%# //Email address %>

    </div>

  </section>
<% end %>
<%# //Contact Us %>