<div class="detail-view__divider detail-view__divider--col grid grid--gutterless grid--flush">

  <!-- The Deal -->
  <div class="grid__item non-palm-one-half">
    <div class="island detail-view__divider--palm">
      <header class="deal-main box box--torn">
        <h1 class="deal-main__hdr" id="detail-view__hdr"><%= @deal.title %></h1>
        <p class="deal-main__meta">from <%= @store.name %> <span>Deal ends <time datetime="<%= @deal.available_to.strftime("%Y-%m-%d") %>"><%= @deal.available_to.strftime("%A %e %B") %></time></span></p>
      </header>
    </div>
  </div>
  <!-- //The Deal -->

  <!-- Store location & contact store -->
  <div class="grid__item non-palm-one-half">

    <!-- Store location -->
    <div class="map-micello map-micello--static detail-view__divider">
      <%= render partial: 'shared/map', locals: {store_id: @store.id, interactive: false, load_immediately: true} %>
    </div>
    <!-- //Store location -->

    <!-- Contact store -->
    <div class="island island--fill island--center islet-tops">
      <span class="hide-fully--non-palm">
        <a href="tel:<%= @store.phone_number.gsub(/\s+/,'') %>" class="btn btn--full btn--main btn--main-alt2 btn--main-lrg"><span class="icon icon--phone icon--xlrg icon--spacing-lrg icon--flush-top" aria-hidden="true"></span><strong>Call <%= @store.name %></strong></a>
      </span>
      <p class="detail-view__check-avble hide-fully--palm"><span class="detail-view__subtle-txt">Check store availability</span> <em><span class="icon icon--phone icon--lrg icon--spacing" aria-hidden="true"></span> <%= @store.phone_number %></em></p>
    </div>
    <!-- //Contact store -->

  </div>
  <!-- //Store location & contact store -->

  <span class="detail-view__divider--col-line hide-fully--palm"></span>

</div>

<!-- Availability -->
<% if @deal.stores and @deal.stores.size > 1 %>
  <div class="island detail-view__availability">
    <h3 class="detail-view__hdr-sub detail-view__mrg-off hn">Also available at</h3>
    <ul class="detail-view__mrg-base">
      <% @deal.stores.each do |store| %>
        <% unless store.id == @store.id %>
          <li><a href="<%= centre_deal_path(store.centre.code, @deal.id)%>" class="centres-list"><span class="icon icon--pin icon--lrg icon--spacing-lrg" aria-hidden="true"></span><%= store.centre.short_name %><span class="icon icon--arrow-right icon--lrg" aria-hidden="true"></span></a></li>
        <% end %>
      <% end %>
    </ul>
  </div>
<% end %>
<!-- //Availability -->
<!-- Fine print -->
<% if @deal.terms_and_conditions and !@deal.terms_and_conditions.empty? %>
  <div class="detail-view__desc detail-view__desc--fine-print detail-view__subtle-txt toggle-content js-toggle-content js-hide-show island">
    <h2 class="detail-view__hdr-sub hn">The fine print</h2>
    <% @deal.terms_and_conditions.each do |paragraph| %>
      <% unless paragraph.empty? %><p><%= paragraph %></p><% end %>
    <% end %>
  </div>
<% end %>
<!-- //Fine print -->

<%- content_for :javascript do -%>
  <script>
    $(function() {

      // Check if 'Availability' content exists so we can add divider to 'Fine print' container
      if ($('.detail-view__availability').length) {
        $('.toggle-content').addClass('detail-view__divider detail-view__divider--top');
      }

      // Run 'Toggle content' plugin
      $('.js-toggle-content').toggleContent({
        btnTxtOpen: 'Read the fine print <span aria-hidden="true" class="icon icon--arrow-down-full icon--lrg"></span>',
        btnTxtClose: 'Collapse the fine print <span aria-hidden="true" class="icon icon--arrow-up-full icon--lrg"></span>'
      });
    });
  </script>
<%- end -%>
