<% content_for :class_for_main, "container--spacing-top-main-content" %>

<h1 class="hide-visually">Events</h1>

<% if @events.blank? %>

  <%# No events fallback message %>
  <div class="fallback-msg fallback-msg--spacing-top">
    <p>
      <span class="fallback-msg__icon icon icon--event icon--flush-top" aria-hidden="true"></span>
      <em class="h1">No events at this centre</em>
      <span>See nearby centres</span>
    </p>
  </div>
  <%# //No events fallback message %>

<%- else -%>

  <%# Pin board %>
  <%= pin_board(@events) do |event| %>
    <%= tile "event", result: event %>
  <% end %>
  <%# //Pin board %>

<%- end -%>