<div class="island island--top-btm detail-view__divider">
  <div class="container">

    <header class="detail-view__mrg-base">
      <h2 class="detail-view__hdr hn" id="detail-view__hdr"><%= @event.name %></h2>

      <ul class="detail-view__meta islet islet--top-btm detail-view__divider detail-view__divider--top horiz-list horiz-list--fit">
        <li class="detail-view__subtle-txt"><time datetime="<%= Time.new(@event.start).strftime("%Y-%m-%d") %>"><%= Time.new(@event.start).strftime("%d %b %Y") %></time> to <time datetime="<%= Time.new(@event.start).strftime("%Y-%m-%d") %>"><%= Time.new(@event.finish).strftime("%d %b %Y") %></time></li><!--
      --><li><span class="icon icon--pin icon--lrg icon--spacing" aria-hidden="true"></span><%= @event.location %></li>
      </ul>
    </header>

    <div class="detail-view__media detail-view__mrg-base">
      <%= image_tag ImageService.transform(ref: @event.image_ref, size: "800x800"), alt: @event.name %>
    </div>

    <h3 class="detail-view__hdr-sub hn">Event Details</h3>
    <div class="detail-view__desc">
      <%= @event.description %>
    </div>

  </div>
</div>

<div class="island island--top-btm">
  <div class="container">
      <h3 class="detail-view__hdr-sub hn">Event Schedule</h3>
    </div>
</div>


<div class="container timelines">
  <dl class="timelines__timeline">
    <dt class="timelines__day">
      <%= @event.start_day_of_week %>
      <div class="timelines__day__date">
        <time datetime="<%= @event.start %>">
        <em><%= @event.start_day %></em>
        <%= @event.start_month %>
      </div>
    </dt>
    <dd class="timelines__time">
      <%= @event.start_time %>
    </dd>
  </dl>
</div>