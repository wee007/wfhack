<article class="tile tile--<%= result.kind.pluralize %> box" role="article">
  <em class="hide-visually"><%= result.kind %></em>
  <%= link_to(defined?(url) ? url : send("centre_#{result.kind}_path", @centre, result)) do %>
    <%= yield %>
  <% end %>
  <div class="tile__controls">
    <%= render "/shared/social_share", result.meta %>
  </div>
</article>