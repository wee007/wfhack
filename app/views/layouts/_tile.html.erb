<article class="tile tile--<%= result.kind.pluralize %> box js-tile test-tile" role="article">

  <% unless params[:controller] == result.kind.pluralize %>
    <em class="hide-visually"><%= result.kind.titlecase %></em>
  <% end %>

  <%= link_to yield, tile_url(@centre, result), target: "_self" %>

  <div class="tile__controls js-tile-controls">
    <%= render "/shared/social_share", kind: result.kind, id: result.id %>
  </div>

</article>
