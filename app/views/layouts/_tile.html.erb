<article class="tile tile--<%= result.kind.pluralize %> box" role="article">
  <em class="hide-visually"><%= result.kind %></em>
  <%= link_to yield, tile_url(@centre, result), target: "_self" %>
  <div class="tile__controls">
    <%= render "/shared/social_share",
      url: tile_url(@centre, result),
      title: result.meta.title,
      image: result.meta.image
    %>
  </div>
</article>
