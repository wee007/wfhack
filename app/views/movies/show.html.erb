<div itemscope itemtype="http://data-vocabulary.org/Event">

  <%# Movie details %>
  <div class="island detail-view__divider">

    <header class="detail-view__mrg-base">
      <%# Movie title %>
      <h1 class="detail-view__hdr hn" itemprop="summary">
        <%= @movie.title %>
      </h1>
      <%# //Movie title %>

      <%# Movie classification %>
      <div class="detail-view__meta islet islet--top-btm detail-view__divider detail-view__divider--top-btm">
        <em></em>><%= @movie.classification %> rating</em>
      </div>
      <%# //Movie classification %>
    </header>

    <%# Movie main image %>
    <div class="detail-view__media detail-view__mrg-base">
      <img src="http://placehold.it/600x400" alt="Screenshot of <%= @movie.title %>" itemprop="photo">
    </div>
    <%# //Movie main image %>

    <h2 class="detail-view__hdr-sub hn">Synopsis</h2>

    <%# Movie synopsis %>
    <div class="detail-view__desc txt-formatted">
      <p itemprop="description"><%= @movie.synopsis %></p>
    </div>
    <%# //Movie synopsis %>

  </div>
  <%# //Movie details wrapper %>

  <div class="detail-view__schedule island">
    <h2 class="detail-view__hdr-sub hn">Session Times</h2>

    <%# [BACKEND] Output the name of the cinema as indicated below %>
    <p>Select a session to purchase tickets at [NAME OF CINEMA]</p>

    <%# Session times %>
    <dl class="timeline">
      <dt>
        <%# [BACKEND] Output the day of the week %>
        Monday
        <em class="timeline__date">
          <%# [BACKEND] Output date, as well as the un-abbreviated version of the month as the value in the `title` attribute %>
          <span>23</span> <abbr title="September">Sep</abbr>
        </em>
      </dt>
      <dd>
        <%# [BACKEND] Add link to the actual cinema's movie session page, like existing implementation. Also output the time as ISO date format (the session time in the movie feed we get) %>
        <time datetime="2013-09-23T09:00:00" itemprop="startDate"><a href="#" rel="external">09:00am</a></time>
        <%# [BACKEND] Output special session within the square brackets [] if available for the time e.g. [Gold Class], [VMAX] %>
        [Special Session]
      </dd>
      <dd>
        <time datetime="2013-09-23T09:00:00" itemprop="startDate"><a href="#" rel="external">09:00am</a></time>
      </dd>
      <dt>
        Tuesday
        <em class="timeline__date">
          <span>24</span> <abbr title="September">Sep</abbr>
        </em>
      </dt>
      <dd>
        <time datetime="2013-09-24T09:00:00" itemprop="startDate"><a href="#" rel="external">09:00am</a></time>
      </dd>
    </dl>
    <%# //Session times %>

  </div>
  <%# //Movie details %>

</div>