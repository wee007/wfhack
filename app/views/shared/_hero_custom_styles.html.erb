<% content_for :custom_styles do %>
  <style>
    <%# Hero image at this breakpoint (small) %>
    @media (max-width: 25em) {
        <%= target %> {background-image: url(<%= asset_path("heroes/#{image}-sml.jpg") %>);}
    }
    <%# Hero image at this breakpoint (medium) %>
    @media (min-width: 25.0625em) and (max-width: 48em) {
        <%= target %> {background-image: url(<%= asset_path("heroes/#{image}-med.jpg") %>);}
    }
    <%# Hero image at this breakpoint (large) %>
    @media (min-width: 48.0625em) {
        <%= target %> {background-image: url(<%= asset_path("heroes/#{image}-lrg.jpg") %>);}
    }
    <%# Old IE %>
    .old-ie <%= target %> {background-image: url(<%= asset_path("heroes/#{image}-lrg.jpg") %>);}
  </style>
<% end %>