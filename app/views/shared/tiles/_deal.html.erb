<%# Meta %>
<div class="tile__meta">

  <%# Logo %>
  <% if result.logo %>
    <%= fetch_image_tag result.logo,
      alt: "#{result.store_name} logo",
      width: 168,
      height: 62,
      class: "tile__meta__logo",
      crop: :pad,
      format: :auto
    %>
  <%# //Logo %>

  <%# Store name %>
  <% else %>
    <h3 class="tile__meta__hdr txt-truncate"><%= result.store_name %></h3>
  <% end %>
  <%# //Store name %>

  <%# The deal %>
  <p class="tile__meta__desc txt-hyphenate"><%= result.title %></p>
  <%# //The deal %>

</div>
<%# //Meta %>

<%# Icon %>
<span class="tile__meta__icon icon icon--deal icon--lrg" aria-hidden="true"></span>
<%# //Icon %>

