<div class="tile__image">
  <%# FIXME There is something causing some images in beta not to load if the cl_image_tag is used here %>
  <%= fetch_image_tag result.primary_image, {
      'data-height' => result.image_height,
      alt: "Photo of product: #{result.name}",
      width: 289,
      crop: :limit,
      format: :auto
    }.merge((options if defined? options) || {})
  %>
</div>

<div class="tile__meta">
  <span class="tile__meta__icon">
    <span class="icon icon--products" aria-hidden="true"></span>
  </span>
  <div class="tile__meta__inner">
    <h3 class="tile__meta__hdr txt-truncate"><%= result.name %></h3>
    <p class="tile__meta__desc txt-truncate">
      <span class="tile__meta__price"><%=number_to_currency result.sale_price %></span>
      from <strong><%= result.retail_chain_name %></strong>
    </p>
  </div>
</div>
