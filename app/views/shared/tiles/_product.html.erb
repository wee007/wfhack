<%# Tile product image %>
<div class="tile__image">
  <%# FIXME There is something causing some images in beta not to load if the cl_image_tag is used here %>
  <%= fetch_image_tag result.primary_image, {
      'data-height' => result.image_height,
      width: 289,
      alt: "",
      crop: :limit,
      format: :auto
    }.merge((options if defined? options) || {})
  %>
</div>
<%# //Tile product image %>

<%# Tile product meta %>
<div class="tile__meta">

  <%# Tile product icon %>
  <span class="tile__meta__icon icon icon--products icon--lrg" aria-hidden="true"></span>
  <%# //Tile product icon %>

  <%# Tile product name and brand %>
  <div class="tile__meta__inner">
    <h3 class="tile__meta__hdr txt-truncate"><%= result.name %></h3>
    <p class="tile__meta__desc txt-truncate">from <strong><%= result.retail_chain_name %></strong></p>
  </div>
  <%# //Tile product name and brand %>

  <%# Tile price %>
  <div class="tile__meta__price">
    <span><%=number_to_currency result.sale_price %></span>
    <em>99% Off</em>
  </div>
  <%# //Tile price %>

</div>
<%# //Tile product meta %>