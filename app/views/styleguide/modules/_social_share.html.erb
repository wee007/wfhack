<%= styleguide_block 'Social Share' do |style| %>
<div class="social-share drop-down-container js-social-share" data-url="/styleguide/static/social_share" aria-live="polite" aria-atomic="true">

  <button type="button" class="social-share__trigger controls__btn btn js-social-share-trigger" aria-haspopup="true" aria-expanded="false">

    <%# Preloader %>
    <span class="preloader">
      <span class="preloader__spinner"></span>
      <em>Loading&#8230;</em>
    </span>
    <%# //Preloader %>

    <%# Button text %>
    <span class="icon icon--share icon--lrg icon--spacing-lrg hide-when-visible" aria-hidden="true"></span><!--
    --><span class="social-share__trigger__txt hide-when-visible">Share</span><!--
    --><span class="icon icon--close-lrg icon--lrg icon--spacing-lrg show-when-visible show-when-visible--inline-block" aria-hidden="true"></span><!--
    --><span class="social-share__trigger__txt show-when-visible show-when-visible--inline-block">Close</span>
    <%# //Button text %>

  </button>


</div>
<% end %>