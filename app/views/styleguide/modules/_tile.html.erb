<%= styleguide_block 'Tile' do |style| %>
<article class="tile $modifier_class box js-tile" role="article">

  <a href="#" target="_self">
    <div class="tile__image">
      <img alt="" src="http://placehold.it/289x398&text=image">
    </div>

    <div class="tile__meta">
      <span class="tile__meta__icon icon icon--product" aria-hidden="true"></span>
      <div class="tile__meta__inner">
        <h3 class="tile__meta__hdr txt-truncate">Goodridden</h3>
        <p class="tile__meta__desc txt-truncate">
          <span class="tile__meta__desc__price">$69.95</span>
          from <strong>Nine West</strong>
        </p>
      </div>
    </div>
  </a>

  <div class="tile__controls js-tile-controls">
    <div class="social-share drop-down-container js-social-share" aria-live="polite" aria-atomic="true">

      <button type="button" class="social-share__trigger controls__btn btn js-social-share-trigger" aria-haspopup="true">
        <span class="preloader">
          <span class="preloader__spinner"></span>
          <em>Loading…</em>
        </span>
        <span class="icon icon--share icon--lrg icon--spacing-lrg hide-when-visible" aria-hidden="true"></span><!--
        --><span class="social-share__trigger__txt hide-when-visible">Share</span><!--
        --><span class="icon icon--close-lrg icon--lrg icon--spacing-lrg show-when-visible show-when-visible--inline-block" aria-hidden="true"></span><!--
        --><span class="social-share__trigger__txt show-when-visible show-when-visible--inline-block">Close</span>
      </button>
    </div>
  </div>

</article>
<% end %>

